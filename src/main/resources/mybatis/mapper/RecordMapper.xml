<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxc.quiz.mapper.RecordMapper">


	<!--根据学生id查询考试信息-->
	<select id="queryAllExamById" resultType="com.lxc.quiz.domain.Record" parameterType="Integer">

	</select>
	<!--根据分数排名-->


	<!--查询所有考试名称-->
	<select id="queryAllExam" resultType="com.lxc.quiz.domain.Record">

	</select>

	<!--查询所有考试中对应所有班级-->
	<select id="queryAllClass" resultType="com.lxc.quiz.domain.Classe" parameterType="String">

	</select>

	<!--查询对应考试对应班级参考人数-->
	<select id="queryAllScore" resultType="Integer" parameterType="com.lxc.quiz.domain.RecordExam">

	</select>
	<!--查询对应考试对应班级及格人数-->
	<select id="queryAccScore" resultType="Integer" parameterType="com.lxc.quiz.domain.RecordExam">

	</select>

	<!--查询是否已存在对应paperid总分记录-->
	<select id="queryBooleanToscore" resultType="Integer" parameterType="Integer">

	</select>

	<!--根据paperid查询总分-->
	<select id="queryToscore" resultType="Integer" parameterType="Integer">

	</select>

	<!--添加记录-->
	<insert id="addRecord" parameterType="com.lxc.quiz.domain.Record">

	</insert>

	<!--为每张试卷添加总分记录-->
	<insert id="AddToScore" parameterType="com.lxc.quiz.domain.Toscore">

	</insert>
</mapper>
